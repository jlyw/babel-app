<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.babel.mybabelapplication.ProfileActivity"
    android:background="@drawable/tour_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/layout_header_profile"
        android:gravity="center">
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFIL"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layout_header_profile"
        android:orientation="vertical"
        android:layout_width="75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_good_answers"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#d66666"
            app:cpv_circle_width="5dp"
            app:cpv_background_circle_width="5dp"
            app:cpv_background_circle_color="#dfa964"
            app:cpv_text_prefix="%"
            app:cpv_text_size="20"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de bonne réponses"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_mastered_voc"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#d66666"
            app:cpv_circle_width="5dp"
            app:cpv_background_circle_width="5dp"
            app:cpv_background_circle_color="#dfa964"
            app:cpv_text_prefix="%"
            app:cpv_text_size="20"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de mots de vocabulaire enregistrés"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"

            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_mastered_verbs"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#d66666"
            app:cpv_circle_width="5dp"
            app:cpv_background_circle_width="5dp"
            app:cpv_background_circle_color="#dfa964"
            app:cpv_text_prefix="%"
            app:cpv_text_size="20"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de verbes irréguliers maîtrisés"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>





    <LinearLayout
        android:layout_below="@id/layout_header_profile"
        android:orientation="vertical"
        android:layout_width="75dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_exo_done"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#ffffff"
            app:cpv_circle_width="1dp"
            app:cpv_background_circle_width="1dp"
            app:cpv_background_circle_color="#ffffff"
            app:cpv_text_prefix=""
            app:cpv_text_size="30"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exercices faits"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_created_lists"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#ffffff"
            app:cpv_circle_width="1dp"
            app:cpv_background_circle_width="1dp"
            app:cpv_background_circle_color="#ffffff"
            app:cpv_text_prefix=""
            app:cpv_text_size="30"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="listes crées"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_mastered_voc_nb"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#ffffff"
            app:cpv_circle_width="1dp"
            app:cpv_background_circle_width="1dp"
            app:cpv_background_circle_color="#ffffff"
            app:cpv_text_prefix=""
            app:cpv_text_size="30"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mots maitrisés"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_mastered_verb_nb"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#ffffff"
            app:cpv_circle_width="1dp"
            app:cpv_background_circle_width="1dp"
            app:cpv_background_circle_color="#ffffff"
            app:cpv_text_prefix=""
            app:cpv_text_size="30"
            app:cpv_text_color="#ffffff"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="verbes maitrisés"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
